# Базовая схема продуктов питания
schema food inherits product {
    # Базовый документ продуктов питания
    document food inherits product {
        # Структура пищевой ценности
        struct nutritional {
            # Белки
            field squirrels type float {}
            # Жиры
            field fats type float {}
            # Углеводы
            field carbohydrates type float {}
        }
        # Структура энергетической ценности
        struct energy {
            # Килоджоулей
            field joules type int {}
            # Килокалорий
            field kcal type int {}
        }
        # Состав продукта
        field composition type array<string> {
            indexing: summary | index
        }
        # Пищевая ценность
        field nutritional type nutritional {
            indexing: summary
        }
        # Энергетическая ценность
        field energy type energy {
            indexing: summary
        }
        # Соответствует ГОСТ
        field GOST type bool {
            indexing: summary | attribute
        }
    }
    # Сводка документов, для использования нужно добавить к запросу - "presentation.summary": "demo-summary"
    document-summary demo-summary {
        # Вывести поле nutritional
        summary nutritional type nutritional {}
        # Вывести поле GOST и переименовать его в international_technical_standards
        summary international_technical_standards type bool {
            source: GOST
        }
    }
}