# Схема данных
schema product {
    # Описывает тип документа
    document product {
        # Определяет именование полей, их хранение, индексирование и ранжирование
        field name type string {
            # Определяет тип индексирования
            indexing: summary | attribute
        }
        field size type string {
          # Определяет тип индексирования
          indexing: summary  | attribute
        }
    }

    # Сводка докуентов, для использования нужно добавить к запросу - "presentation.summary": "demo-summary"
    document-summary demo-summary {
        # Вывести поле name
        summary name type string {}
        # Вывести поле size и переименовать его в product_size
        summary product_size type string {
            source: size
        }
    }
}