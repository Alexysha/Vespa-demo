# Схема телефона
schema phone inherits technic {
    # Документ телефона
    document phone inherits technic {
        # Цвет
        field color type string {
            indexing: summary | index
        }
        # Операционная система
        field operation type string {
            indexing: summary | index
        }
        # Диагональ экрана
        field screen type float {
            indexing: summary | attribute
        }
        # Материал корпуса
        field material type array<string> {
            indexing: summary | index
        }
    }
}