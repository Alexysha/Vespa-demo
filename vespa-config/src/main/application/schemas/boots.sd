# Схема ботинок
schema boots inherits shoes {
    # Документ, описывающий свойства ботинок
    document boots inherits shoes {
        # Непромокаемость
        field moisture type bool {
            indexing: summary | attribute
        }
        # Наличие молнии
        field zipper type bool {
            indexing: summary | attribute
        }
    }
}